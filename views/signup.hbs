<div class="bg-wrapper">

  <div class="mainContainer container-fluid col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">

    <form method="post">
      <div class="form-group col-xs-12 frontaction">
        <label>Username</label>
        <input type="text" class="form-control" name="signupUsername" placeholder="Username" value="{{contact.name}}">
      </div>
      <div class="form-group col-xs-12 frontactionp">
        <label>Phone Number</label>
        <input type="text" class="form-control" name="signupPhone" placeholder="Phone Number" value="{{contact.name}}">
      </div>
      <div class="form-group col-xs-12 frontaction">
        <label>Password</label>
        <input type="password" class="form-control" name="signupPassword" placeholder="Password" value="{{contact.phone}}">
      </div>
      <div class="form-group col-xs-12 frontaction">
        <label>Confirm Password</label>
        <input type="password" class="form-control" name="signupPasswordConfirm" placeholder="Confirm password" value="{{contact.phone}}">
      </div>

      <div class="form-group col-xs-12">
        <button type="submit" class="btn btn-primary col-xs-12 frontaction">Register</button>
      </div>

      <div class="form-group col-xs-12">
        <a class="btn btn-primary col-xs-12 frontaction" href='/contacts/new'>Retun to Login</a>
      </div>

    </form>

  </div>

</div>
